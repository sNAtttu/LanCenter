@model LanCenter.Models.FoodOrder

@{
    ViewData["Title"] = "Uusi";
}

<h2>Tee tilaus</h2>
<h4>Joose hoitaa</h4>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FoodName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tilaa" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index"><i class="fa-angle-left"></i>Listaukseen</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
