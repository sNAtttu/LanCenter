@model IEnumerable<LanCenter.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h2>LAN pelit</h2>
<h4>
    Lanittajien pelit. Tietoja -kohdan alla on pelin pelaajat.
</h4>
<p>
    <a asp-action="Create">Uusi</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoundFromSteam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoundFromSteam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            <a asp-controller="Games" asp-action="MarkOwned" asp-route-id="@item.GameID">Omistan</a> |
            <a asp-controller="Games" asp-action="MarkNotOwned" asp-route-id="@item.GameID">En Omista</a> |
            <a asp-action="Details" asp-route-id="@item.GameID">Tietoja</a> |
            <a asp-action="Edit" asp-route-id="@item.GameID">Muokkaa</a> |
            <a asp-action="Delete" asp-route-id="@item.GameID">Poista</a>
        </td>
    </tr>
}
</table>
